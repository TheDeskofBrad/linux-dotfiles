! URxvt -----------------------------------------------------------------

! black
URxvt.color0  : #000000
URxvt.color8  : #555555
! red
URxvt.color1  : #AA0000
URxvt.color9  : #FF5555
! green
URxvt.color2  : #00AA00
URxvt.color10 : #55FF55
! yellow
URxvt.color3  : #AB4400
URxvt.color11 : #FFFF44
! blue
URxvt.color4  : #0000AA
URxvt.color12 : #5555FF
! magenta
URxvt.color5  : #AA00AA
URxvt.color13 : #FF55FF
! cyan
URxvt.color6  : #00AAAA
URxvt.color14 : #55FFFF
! white
URxvt.color7  : #AAAAAA
URxvt.color15 : #FFFFFF

URxvt.scrollBar: false
URxvt.scrollstyle: plain
URxvt.scrollBar_right: true
URxvt.scrollBar_floating: true
URxvt.scrollColor: gray

URxvt.font: xft:DejavuSansMono:pixelsize=16
URxvt.background: #000000
URxvt.foreground: #e4e2e2
URxvt.cursorBlink: true

!stop scroll to bottom with output
URxvt.scrollTtyOutput: false
!reduce the amount of refreshes in case of rapid output
URxvt.skipScroll: true
!scroll to bottom with non-special key press
URxvt.scrollTtyKeypress: true
URxvt.saveLines: 500

! add tabs
URxvt.perl-ext-common:  default,tabbed
URxvt.tabbed.tabbar-fg: 8
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 15
URxvt.tabbed.tab-bg: 0

! taskbar icon
URxvt.iconFile:    /usr/share/icons/Tango/scalable/apps/terminal.svg

! True transparency with Compositor
! URxvt.depth: 32
! URxvt.background: rgba:0000/0000/0000/bbbb

